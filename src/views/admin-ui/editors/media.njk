<div class="form-group {{'right-column' if field.uiSettings.onRightColumn}}">
    <label for="{{key}}">{{ field.name | tr }}
        {% if field.uiSettings.descriptionText %}
            <small id="{{key}}-help" class="{{ field.uiSettings.descriptionTextClasses if field.uiSettings.descriptionTextClasses }} description-label">{{ field.uiSettings.descriptionText | tr }}</small>
        {% endif %}
    </label>

        <span id="current-media-{{key}}" class=" {{ 'hidden' if not data[key] }}">
            <br/>
            <div class="img-thumbnail-container" >
                <img id="preview-{{key}}-media" src="{{route('adminUI.previewMedia', { id: data[key] }) }}" class="img-thumbnail">
                <button type="button" class="btn btn-info btn-show-img" onclick="_adminUI_showImageFullscreen('{{key}}');event.stopPropagation();"><i class="fas fa-eye"></i></button>
                {% if field.readOnly %}
                {% else %}
                    <button type="button" class="btn btn-warning btn-edit-img" onclick="$('#input-{{key}}-media').click();"><i class="fas fa-edit"></i></button>
                    <button type="button" class="btn btn-danger btn-remove-img" onclick="_adminUI_removeMedia('{{key}}');event.stopPropagation();"><i class="fas fa-trash"></i></button>
                {% endif %}
            </div>
        </span>
        <input type="hidden" id="remove-{{key}}" name="remove-{{key}}" value=""/>
    
        <div class="media-img-placeholder {{ 'hidden' if data[key] }}" id="placeholder-{{key}}" onclick="$('#input-{{key}}-media').click();"></div>
    
    <input class="form-control" 
        type="file"
        name="{{key}}" 
        id="input-{{key}}-media"
        style="height: 0; padding: 0; border: none"
        onchange="_adminUI_loadFile(event, '{{key}}')"
        {% if field.accept %}
        accept="{{field.accept}}"
        {% endif %}
        {{ "readonly" if field.readOnly }} 
        {{ "required" if field.required }}
/>
</div>
