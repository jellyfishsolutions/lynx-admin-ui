<div class="form-group">
    <label for="{{key}}">{{ field.name | tr }} </label>
    <input class="form-control" 
        type="number"
        name="{{key}}" 
        value="{{data[key]}}" 
        {{ "min="+field.min if field.min}}
        {{ "max="+field.min if field.max}}    
        {{ "step="+field.step if field.step}}
        {{ "readonly" if field.readOnly }} 
    />
</div>