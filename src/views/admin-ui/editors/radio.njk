<div class="form-group">
    <label for="{{key}}">{{ field.name | tr }} </label>
    {% for element in field.values %}
        <div class="form-check">
            <input class="form-check-input" type="radio" name="{{key}}" value="{{element.key}}" {{ "readonly" if field.readOnly }} {{"checked" if data[key] == element.key }} />
            <label class="form-check-label">{{element.value | tr}}</label>
        </div>
    {% endfor %}
</div>