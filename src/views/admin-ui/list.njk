{% extends resolvePath(parentTemplate) %}

{% import resolvePath('/datagrid/utility') as dgUtils %}


{% block additional_styles %}
  <link href="{{route('/adminUI/fontawesome/css/all.css')}}" rel="stylesheet"> <!--load all styles -->
{% for key, field in fields %}
    {% include resolvePath(configuration[field.type] + '-css') ignore missing %}
{% endfor %}
{% endblock %}
{% block additional_scripts %}
{% for key, field in fields %}
    {% include resolvePath(configuration[field.type] + '-js') ignore missing %}
{% endfor %}
{% endblock %}

{% block body %}
{% set filtersCount = 0 %}
{% for key, field in fields %}
    {% if field.searchable %}
        {% set filtersCount = filtersCount + 1 %}
    {% endif %}
{% endfor %}
<div class="container">
{% if filtersCount > 0 %}
<div class="accordion" id="accordionFilter">
    <div class="card">
        <div class="card-header" id="filterBy">
            <h4 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#filtering">
                    Filtering
                </button>
            </h4>
        </div>

        <div id="filtering" class="collapse" data-parent="#accordionFilter">
            <div class="card-body">
            <form method="GET" action="{{route('adminUI.list', { entityName: req.params.entityName })}}">
                <div class="row">
                    {% for key, field in fields %}
                        {% if field.searchable %}
                            <div class="{{ field.uiSettings.filterClasses if field.uiSettings and field.uiSettings.filterClasses else 'col-12' }} ">
                            {% include resolvePath(configuration[field.type]) %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <button class="btn btn-primary">Filter</button>
            </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="">
    <a href="{{ route('adminUI.details', {entityName: req.params.entityName, id: 0}) }}" class="btn btn-primary btn-create">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            {% for key, field in fields %}
                {% if field.onSummary %}
                    <th>
                        {{ dgUtils.orderableHeader(field.name, key, gridData) }}
                    </th>
                {% endif %}
            {% endfor %}
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for d in gridData.data %}
            <tr>
            {% for key, field in fields %}
                {% if field.onSummary %}
                    {% if field.uiSettings and field.uiSettings.listTemplate %}
                        {% set value = d[key] %}
                        <td>{% include resolvePath(field.uiSettings.listTemplate) %} </td>
                    {% else %}
                        <td>{{d[key]}}</td>
                    {% endif %}
                {% endif %}
            {% endfor %}
            <td>
                {% if metadata.classParameters.listActionTemplate %}
                    {% include resolvePath(metadata.classParameters.listActionTemplate) %}
                {% else %}
                    <a href="{{route('adminUI.details', {entityName: req.params.entityName, id: d.id})}}">Details</a>
                {% endif %}
            </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ dgUtils.pagination(gridData) }}

</div>
{% endblock %}