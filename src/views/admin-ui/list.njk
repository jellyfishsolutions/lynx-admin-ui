{% extends resolvePath(parentTemplate) %}

{% import resolvePath("/lynx/utils") as utils %}
{% import resolvePath('/datagrid/utility') as dgUtils %}


{% block additional_styles %}
  <link href="{{route('/adminUI/fontawesome/css/all.css')}}" rel="stylesheet"> <!--load all styles -->
{% for key, field in fields %}
    {% include resolvePath(configuration[field.type] + '-css') ignore missing %}
{% endfor %}
{% endblock %}
{% block additional_scripts %}
{% for key, field in fields %}
    {% include resolvePath(configuration[field.type] + '-js') ignore missing %}
{% endfor %}

<script>
$('#deleteModal').on('show.bs.modal', function (event) {
  var button = $(event.relatedTarget);
  var id = button.data('id');
  var name = button.data('name');
  var modal = $(this)
  modal.find('.element-name').text(name);
  var url = "{{route('adminUI.delete', { entityName: req.params.entityName, id: ':id' })}}".replace(':id', id);
  url += '?redirect=' + window.location;
  modal.find('.delete-url').attr("href", url);
})
</script>
{% endblock %}

{% block body %}
{% set filtersCount = 0 %}
{% for key, field in fields %}
    {% if field.searchable %}
        {% set filtersCount = filtersCount + 1 %}
    {% endif %}
{% endfor %}
<div class="container">
{{ utils.alert(flash) }}
{% if filtersCount > 0 %}
<div class="accordion" id="accordionFilter">
    <div class="card">
        <div class="card-header" id="filterBy">
            <h4 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#filtering">
                    Filtering
                </button>
            </h4>
        </div>

        <div id="filtering" class="collapse" data-parent="#accordionFilter">
            <div class="card-body">
            <form method="GET" action="{{route('adminUI.list', { entityName: req.params.entityName })}}">
                <div class="row">
                    {% for key, field in fields %}
                        {% if field.searchable %}
                            <div class="{{ field.uiSettings.filterClasses if field.uiSettings and field.uiSettings.filterClasses else 'col-12' }} ">
                            {% include resolvePath(configuration[field.type]) %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <button class="btn btn-primary">Filter</button>
            </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="">
    <a href="{{ route('adminUI.details', {entityName: req.params.entityName, id: 0}) }}" class="btn btn-primary btn-create">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            {% for key, field in fields %}
                {% if field.onSummary %}
                    <th>
                        {{ dgUtils.orderableHeader(field.name, key, gridData) }}
                    </th>
                {% endif %}
            {% endfor %}
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for d in gridData.data %}
            <tr>
            {% for key, field in fields %}
                {% if field.onSummary %}
                    {% if field.uiSettings and field.uiSettings.listTemplate %}
                        {% set value = d[key] %}
                        <td>{% include resolvePath(field.uiSettings.listTemplate) %} </td>
                    {% else %}
                        <td>{{d[key]}}</td>
                    {% endif %}
                {% endif %}
            {% endfor %}
            <td>
                {% if metadata.classParameters.listActionTemplate %}
                    {% include resolvePath(metadata.classParameters.listActionTemplate) %}
                {% else %}
                    <a class="btn btn-primary btn-details" href="{{route('adminUI.details', {entityName: req.params.entityName, id: d.id})}}">Details</a>
                    <button class="btn btn-danger btn-delete" type="button" data-toggle="modal" data-target="#deleteModal" data-name="{{d.getLabel()}}" data-id="{{d.getId()}}"><i class="far fa-trash-alt"></i></button>

                {% endif %}
            </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ dgUtils.pagination(gridData) }}

</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete element</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          Are you sure to delete <b><span class="element-name">ElementName</span></b>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Abort</button>
        <a href="" class="delete-url btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}